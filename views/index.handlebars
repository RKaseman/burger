
<header>
<h1>Cat Burgers</h1>
</header>

<hr>
<div class="floats">
    <div id="order">
        <h2>Order up:</h2>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
                {{> burgers/burger-block devour=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
    <div id="cat">
        <h2><del>[del]</del></h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
                {{> burgers/burger-block devour=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
</div>

<hr>
<div class="noFloats">
<h2>Create a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burg">Burger Name:</label><br>
        <input type="text" id="burg" name="name">
    </div>

    <div class="form-group">
        <label for="devoured"><del>[status]</del></label><br>
        <input class="hidden" type="radio" name="devoured" value="1" checked><del> [status 1]</del><br>
        <input class="hidden" type="radio" name="devoured" value="0"><del> [status 2]</del>
    </div>

    <button type="submit">Create</button>
</form>
</div>

